<body class=" login">
    <!-- BEGIN : LOGIN PAGE 5-2 -->
    <div class="user-login-5">
        <div class="row bs-reset bg-f2">
            <div class="col-md-6 login-container bs-reset bg-wh">
                <img class="login-logo login-6 main-logo" src="~/images/main-logo.svg" width="40%" />
                <div class="login-content">
                    <h1 class="login-title">Kayıt Olun</h1>
                    <p>Hesabınız mı var? <a asp-action="UyeGiris" asp-controller="Uye">Giriş yap</a></p>
                    <form asp-action="UyeOl"
                          asp-controller="Uye"
                          asp-area="" class="login-form" method="post">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger">
                            <button class="close" data-close="alert"></button>
                            <span>Lütfen gerekli alanları doldurun. </span>
                        </div>

                        <div class="row">
                            <div class="col-xs-6">
                                <input class="form-control form-control-solid placeholder-no-fix form-group" type="text" autocomplete="off" placeholder="Adınız" asp-for="name" required />
                                <span asp-validation-for="name" class="text-danger"></span>
                            </div>
                            <div class="col-xs-6">
                                <input class="form-control form-control-solid placeholder-no-fix form-group" type="text" autocomplete="off" placeholder="Soyadınız" asp-for="surname" required />
                                <span asp-validation-for="surname" class="text-danger"></span>
                            </div>
                            <div class="col-xs-12">
                                <input class="form-control form-control-solid placeholder-no-fix form-group" type="email" autocomplete="off" placeholder="E-Posta" asp-for="email" required />
                                <span asp-validation-for="email" class="text-danger"></span>
                            </div>
                            <div class="col-xs-6">
                                <input class="form-control form-control-solid placeholder-no-fix form-group" type="password" autocomplete="off" placeholder="Şifre" asp-for="password" required />
                                <span asp-validation-for="password" class="text-danger"></span>
                            </div>
                            <div class="col-xs-6">
                                <input class="form-control form-control-solid placeholder-no-fix form-group" type="password" autocomplete="off" placeholder="Şifre Tekrar" asp-for="passwordre" required />
                                <span asp-validation-for="passwordre" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <label class="rememberme mt-checkbox mt-checkbox-outline">
                                    <input asp-for="remember" type="checkbox" name="remember" /> <small>Yedek Parça Merkezi tarafından gönderilecek ticari elektronik iletileri almak istiyorum.</small>
                                    <span></span>
                                </label>
                            </div>
                            <div class="col-sm-12">
                                <label class="rememberme mt-checkbox mt-checkbox-outline">
                                    <input asp-for="sonay" type="checkbox" name="sonay" /><small><a data-toggle="modal" data-target="#usercontract">Kullanıcı Sözleşmesini</a>, <a data-toggle="modal" data-target="#usercontract">Gizlilik Politikasını</a> ve <a data-toggle="modal" data-target="#usercontract">Çerez Kullanım Politikasını</a> okuduğunuzu ve kabul ettiğinizi onaylıyorsunuz.<br /><span asp-validation-for="sonay" class="text-danger"></span> </small>
                                    <span></span>
                                </label>


                            </div>
                            <div class="row">
                                <div class="col-sm-4 text-left">
                                    <button class="btn blue btn-lg signup-btn" type="submit">Kayıt Ol</button>
                                </div>
                                <div class="col-sm-4 text-center">
                                    <a class="btn blue-steel btn-lg signup-btn" href="https://facebook.com" target="_blank"><i class="fa fa-facebook"></i> Facebook ile</a>
                                </div>
                                <div class="col-sm-4 text-right">
                                    <button class="btn red-thunderbird btn-lg signup-btn" type="submit"><i class="fa fa-google"></i> Google ile</button>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
                <!-- Footer
                <div class="login-footer">
                    <div class="row bs-reset">
                        <div class="col-xs-5 bs-reset">

                            <ul class="login-social">
                                <li>
                                    <a href="javascript:;">
